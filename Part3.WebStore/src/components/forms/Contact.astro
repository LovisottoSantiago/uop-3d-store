---
import Title from "@components/global/Title.astro";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="contact-section px-6 py-24 sm:py-32 lg:px-8 bg-gray-50">
	<div class="mx-auto max-w-5xl text-center">
		<Title
			class="pb-10 uppercase"
			title="Nuestras Redes"
			subtitle="Seguinos y escribinos por Instagram o WhatsApp"
		/>

		<div class="social-links flex justify-center gap-8 py-6">
			<a
				href="https://www.instagram.com/uop.3d/"
				target="_blank"
				class="social-link"
			>
				Instagram
			</a>
			<a
				href="https://wa.me/5491136148022"
				target="_blank"
				class="social-link"
			>
				WhatsApp
			</a>
		</div>

		<div class="map-container mt-12 rounded-lg overflow-hidden border-2 border-gray-300">
			<iframe
src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d530.619733833122!2d-58.38309275876524!3d-34.873566443326254!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcd5376ff397cd%3A0xaf1acd7e94860d04!2sRoberto%20J.%20Payr%C3%B3%201640%2C%20B1854%20Longchamps%2C%20Provincia%20de%20Buenos%20Aires%2C%20Argentina!5e0!3m2!1sen!2sus!4v1755205826566!5m2!1sen!2sus"
			width="100%"
			height="450"
			style="border:0;"
			allowfullscreen=""
			loading="lazy"
			referrerpolicy="no-referrer-when-downgrade">
			</iframe>

		</div>
	</div>
</section>

<style>
	.contact-section {
		background-color: #f8f9fa;
	}
	.social-links a.social-link {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		background-color: #000;
		color: #fff;
		border-radius: 8px;
		font-weight: bold;
		text-decoration: none;
		transition: background 0.3s, color 0.3s;
	}
	.social-links a.social-link:hover {
		background-color: #fff;
		color: #000;
		border: 1px solid #000;
	}
	.map-container iframe {
		width: 100%;
		height: 100%;
		min-height: 400px;
	}
</style>
